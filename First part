

# Set secret number

print("I'm thinking of a number between 1 and 99")


import random

# Generate a random secret number between 1 and 100
secret_number = random.randint(1, 100)

# Loop until the user guesses the correct number
while True:
    # Prompt the user to guess the number
    guess = input("Guess the secret number (between 1 and 100): ")
    
    # Check if the guess is a valid number
    if not guess.isdecimal():
        print("Invalid input. Please enter a valid number.")
        continue
        
    # Convert the guess to an integer
    guess = int(guess)
    
    # Check if the guess is correct
    if guess == secret_number:
        print("Congratulations! You guessed the secret number!")
        break
    elif guess < secret_number:
        print("Your guess is too low. Please guess again.")
    else:
        print("Your guess is too high. Please guess again.")
